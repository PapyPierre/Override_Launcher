<Window x:Class="Override_Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Override_Launcher"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Override Launcher" Height="540" Width="960">
    <Grid>
        <Image x:Name="Background" Source="/res/img/LightMode_Background.png" Stretch="Fill"/>
        <TextBlock x:Name="LocalVersionInfo" Text="Version: 0.0.0.0" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Yu Gothic" Foreground="Black" FontSize="10" Margin="10,10,0,0"/>
        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center" Height="200" Width="300">
            <Button x:Name="PlayBtn" Content="PLAY" Click="BtnPlay_Click" Foreground="White" BorderBrush="{x:Null}" FontFamily="Franklin Gothic Demi" FontSize="115" BorderThickness="0,0,0,0" RenderTransformOrigin="0,0" IsDefault="True" Background="#00DDDDDD"/>
            <ProgressBar x:Name="ProgressBar" Minimum="0" Maximum="100" BorderBrush="{x:Null}" Background="#CC333333" Foreground="White" BorderThickness="0,0,0,0" ClipToBounds="True" LargeChange="8" Opacity="1" Margin="0,-104,0,20" Visibility="Hidden" IsEnabled="False"/>
            <TextBlock x:Name="LblStatus" Text="0%" Margin="0,-103,0,0" FontFamily="Yu Gothic" Foreground="Black" HorizontalAlignment="Right" Visibility="Hidden"/>
        </StackPanel>
        <Image x:Name="DarkModeIcon"  Stretch="Fill" HorizontalAlignment="Right" Source="/res/img/Moon.png" VerticalAlignment="Bottom" Width="20" Height="20" Margin="0,0,35,20" Grid.Row="1" Grid.Column="1"/>
        <Button x:Name="DarkModeBtn" Width="20" Click="DarkMode_Click" IsEnabled="True" Margin="0,0,35,20" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="20" Background="#FFDDDDDD" Grid.Row="1" Grid.Column="1" Opacity="0"/>
    </Grid>
</Window>

    
    
    
    
    
    