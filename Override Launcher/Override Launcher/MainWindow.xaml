<Window x:Class="Override_Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Override_Launcher"
        mc:Ignorable="d"
        Title="Override Launcher" Height="450" Width="800">
    <Grid Margin="12">
        <StackPanel Orientation="Vertical" VerticalAlignment="Top" >
            <TextBlock x:Name="LblVersion" Text="Launcher v0.0.0" FontSize="14" Margin="0,0,0,8"/>
            <TextBlock x:Name="LblStatus" Text="Statut : prêt" Margin="0,0,0,8"/>
            <ProgressBar x:Name="ProgressBar" Height="20" Minimum="0" Maximum="100"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button x:Name="BtnCheckUpdate" Content="Vérifier / Installer" Width="140" Margin="0,0,8,0" Click="BtnCheckUpdate_Click"/>
                <Button x:Name="BtnPlay" Content="Jouer" Width="80" Click="BtnPlay_Click" IsEnabled="False"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
